{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "sourceMap": true,
    "strictNullChecks": true,
    "noEmitHelpers": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["esnext"],
    "types": ["mocha", "node"],
    "declaration" : true
  },
  "exclude": [
    "**/*.spec.ts"
  ]
}